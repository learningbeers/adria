<%= bootstrap_form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form>
  <div class="form-group">

    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :surname %><br>
    <%= f.text_field :surname, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :dob %><br>
    <%= f.date_select :dob, :start_year => Date.today.year - 100, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :street %><br>
    <%= f.text_field :street, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :houseno %><br>
    <%= f.text_field :houseno, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :zip %><br>
    <%= f.text_field :zip, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :town %><br>
    <%= f.text_field :town, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :country %><br>
    <%= f.text_field :country, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :telefon %><br>
    <%= f.text_field :telefon, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :vrsta_clana %><br>
    <%= f.select(:vrsta_clana, options_for_select([['Član', 'Član'], ['Podporni član', 'Podborni član'], ['Častni član', 'Častni član']])) %>
  </div>
  <div class="form-group">
    <%= f.label :funkcija %><br>
    <%= f.text_field :funkcija, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :datum_vstopa %><br>
    <%= f.date_select :datum_vstopa, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :datum_izstopa %><br>
    <%= f.date_select :datum_izstopa, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :status_clanstva %><br>
    <%= f.text_field :status_clanstva, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Vnos člana", class: "btn btn-primary" %>
  </div>
<% end %>
</form>