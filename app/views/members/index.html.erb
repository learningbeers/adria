<div class="col-md-12">
  <!-- start: TABLE WITH IMAGES PANEL -->
  <div class="panel panel-white">
    <div class="panel-heading">
      <h4 class="panel-title">Striped <span class="text-bold">rows</span></h4>
    </div>
    <div class="panel-body">
      <p>
        gfdgfd
      </p>
      <table class="table table-striped table-hover" id="sample-table-2">
        <thead>
          <tr>
            <th class="center">Slika</th>
            <th>Ime</th>
            <th>Priimek</th>
            <th class="hidden-xs">Datum rojstva</th>
            <th class="hidden-xs">Starost</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
          <tr>
            <td class="center"><%= image_tag "placeholder.jpg", height: "50" %></td>
            <td><%= member.name %></td>
            <td><%= member.surname %></td>
            <td><%= member.dob.strftime("%d.%m.%Y") %></td>
            <td>
              <% require 'adroit-age'

              age = member.dob.find_age %>
              <%= age %>
            </td>
            <td><%= link_to 'Show', member %></td>
            <td><%= link_to 'Edit', edit_member_path(member) %></td>
            <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- end: TABLE WITH IMAGES PANEL -->
</div>







